---
import HeaderButton from '../components/HeaderButton.astro';
import { SummaryFooter } from '../components/SummaryFooter.jsx';
---

<footer class="fixed bottom-0 w-full bg-gray-800  py-2 px-6 flex justify-between items-center">
    <HeaderButton href={Astro.props.hrefBack}>
        <svg slot="before" class="icon icon-tabler icon-tabler-arrow-narrow-left" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l14 0" /><path d="M5 12l4 4" /><path d="M5 12l4 -4" /></svg>
        Atr√°s
    </HeaderButton>

    <SummaryFooter transition:persist client:visible/>

    <HeaderButton href={Astro.props.hrefNext}>
        {(Astro.props.hrefNext !== 'search-7') ? "Siguiente" : "Reservar" }
        <svg slot="after" class="icon icon-tabler icon-tabler-arrow-narrow-right" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l14 0" /><path d="M15 16l4 -4" /><path d="M15 8l4 4" /></svg>
    </HeaderButton>
</footer>